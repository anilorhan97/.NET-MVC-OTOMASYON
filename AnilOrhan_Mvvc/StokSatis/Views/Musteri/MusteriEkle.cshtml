@model StokSatis.Models.Entity.TBL_MUSTERILER
@{
    ViewBag.Title = "MusteriEkle";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>MÜŞTERİ ADI</label>
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:orange" })
    </div>
    <div>
        <label>MÜŞTERİ SOYADI</label>
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:orange" })
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
</form>

<script>
    $("#btn1").click(function () {
        alert("Müşteri başarılı bir şekilde eklendi.");
    });
</script>